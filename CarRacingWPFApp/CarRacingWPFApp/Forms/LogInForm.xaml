<Window x:Class="CarRacingWPFApp.Forms.LogInForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRacingWPFApp.Forms"
        mc:Ignorable="d"
        Title="Log In" Height="350" Width="350">
    <Grid Margin="20">

        <Label 
            Content="Username" 
            Margin="30,2,151,247"/>
        <TextBox 
            TextWrapping="Wrap" 
            Text="" 
            Margin="30,27,30,212"/>

        <Label 
            Content="Password" 
            Margin="30,60,151,189"/>
        <TextBox 
            TextWrapping="Wrap" 
            Text="" 
            Margin="30,85,30,155"/>

        <Button 
            Content="Submit" 
            Margin="30,236,30,0" 
            RenderTransformOrigin="0.5,0.5" 
            Grid.Row="1"
            Command="{Binding SubmitCommand}">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>



    </Grid>
</Window>
