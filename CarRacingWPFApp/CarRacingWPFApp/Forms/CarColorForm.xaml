<Window x:Class="CarRacingWPFApp.Forms.CarColorForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CarRacingWPFApp.Forms"
        mc:Ignorable="d"
        Title="CarColorForm" Height="280" Width="250">
    <Grid Margin="20">
        
        <RadioButton 
            Content="Red" 
            HorizontalAlignment="Left" 
            Margin="10,22,0,0" 
            VerticalAlignment="Top"/>
        
        <RadioButton 
            Content="Green" 
            HorizontalAlignment="Left" 
            Margin="10,52,0,0" 
            VerticalAlignment="Top"/>
        
        <RadioButton 
            Content="Blue" 
            HorizontalAlignment="Left" 
            Margin="10,82,0,0" 
            VerticalAlignment="Top"/>

        <Button 
            Content="Confirm" 
            Margin="0,154,0,10"/>

    </Grid>
</Window>
