<Application x:Class="CarRacingWPFApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:CarRacingWPFApp"
             xmlns:views="clr-namespace:CarRacingWPFApp.Views"
             xmlns:viewmodels="clr-namespace:CarRacingWPFApp.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewmodels:GarageViewModel}">
            <views:GarageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:GameViewModel}">
            <views:GameView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewmodels:HomeViewModel}">
            <views:HomeView/>
        </DataTemplate>

    </Application.Resources>
</Application>
